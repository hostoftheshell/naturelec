---
import { Icon } from "astro-icon/components";

import { getLocaleFromUrl } from "@/js/localeUtils";
import { getLocalizedRoute, getTranslatedData, useTranslations } from "@/js/translationUtils";

const currLocale = getLocaleFromUrl(Astro.url);

type Props = {
	label: string;
	href?: string;
	icon?: "phone" | "mail" | "clock";
};

const { label, href, icon } = Astro.props;
---

<li>
	<a
		href={href}
		class="text-muted-foreground hover:text-link-hover flex items-center gap-2 transition-colors"
	>
		{icon && <Icon name={`tabler/${icon}`} class="h-4 w-4 flex-shrink-0" />}
		{label}
	</a>
</li>
