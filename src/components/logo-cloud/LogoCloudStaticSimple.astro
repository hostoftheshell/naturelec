---
/**
 * * Logo sloud section static
 *
 * These are taken from the src/icons folder. You may desire to modify any SVGs you use to have the fill set to "currentColor"
 * to use the current text color. That is how I have set up these icons for demo purposes
 */

import { Icon } from "astro-icon/components";
---

<section id="logo-cloud-static" class="flex items-end justify-center py-16 md:py-20">
	<div class="site-container" data-aos="fade-up">
		<div class="mx-auto max-w-5xl">
			<div
				class="text-muted-foreground grid w-full grid-cols-2 gap-2 sm:grid-cols-3 lg:grid-cols-6"
			>
				<div class="flex px-8">
					<Icon
						name="logos/astro"
						class="hover:text-foreground mx-auto h-10 w-auto py-2 transition-colors duration-200"
						aria-label="logo"
					/>
				</div>

				<div class="flex px-8">
					<Icon
						name="logos/dribbble"
						class="hover:text-foreground mx-auto h-10 w-auto transition-colors duration-200"
						aria-label="logo"
					/>
				</div>

				<div class="flex px-8">
					<Icon
						name="logos/sanity"
						class="hover:text-foreground mx-auto h-10 w-auto py-2 transition-colors duration-200"
						aria-label="logo"
					/>
				</div>

				<div class="flex px-8">
					<Icon
						name="logos/contentfull"
						class="hover:text-foreground mx-auto h-10 w-auto transition-colors duration-200"
						aria-label="logo"
					/>
				</div>

				<div class="flex px-8">
					<Icon
						name="logos/github"
						class="hover:text-foreground mx-auto h-10 w-auto transition-colors duration-200"
						aria-label="logo"
					/>
				</div>

				<div class="flex px-8">
					<Icon
						name="logos/notion"
						class="hover:text-foreground mx-auto h-10 w-auto transition-colors duration-200"
						aria-label="logo"
					/>
				</div>
			</div>
		</div>
	</div>
</section>
