---
import Badge from "@/components/badge/Badge.astro";
import Button from "@/components/button/Button.astro";
import { Input } from "@/components/starwind/input";
import { Label } from "@/components/starwind/label";
---

<section id="cta-center-newsletter" class="overflow-hidden py-24">
	<div class="site-container">
		<div class="bg-muted rounded-2xl border py-14" data-aos="fade-up" data-aos-delay="0.5">
			<div class="mx-auto px-4 text-center md:max-w-2xl">
				<Badge>Get Starter</Badge>
				<h2 class="h2 mt-4 mb-6 text-pretty">
					Industry insights you won't delete. Delivered to your inbox weekly
				</h2>
				<p class="text-muted-foreground mx-auto mb-12 max-w-lg">
					Join 10,000 founders, get early access to Starter features, and learn how to squeeze every
					drop of revenue
				</p>
			</div>
			<div class="px-4">
				<form class="mx-auto md:max-w-xl">
					<div class="flex flex-col gap-4 md:flex-row">
						<div class="flex-1">
							<Label for="email" class="sr-only">E-mail</Label>
							<Input
								type="email"
								placeholder="E-mail"
								id="email"
								required
								class="bg-muted h-full w-full"
							/>
						</div>
						<div>
							<Button type="submit" class="w-full px-14 md:w-auto">Subscribe</Button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</section>
