---
import building from "@images/building-2-min.png";
import { Image } from "astro:assets";

import { getLocaleFromUrl } from "@/js/localeUtils";
import { getLocalizedRoute, getTranslatedData, useTranslations } from "@/js/translationUtils";

// Amenities list for Space Coast Medicine
const amenities = [
	"Personalized care plans for every patient",
	"State-of-the-art medical equipment and facilities",
	"Experienced doctors specialized in multiple fields",
	"Convenient scheduling with minimal wait times",
	"Comfortable and modern patient rooms",
];

const currLocale = getLocaleFromUrl(Astro.url);
interface Props {
	class?: string;
}

const { class: className } = Astro.props as Props;
---

<section class:list={["py-20 md:pt-32", className]}>
	<div class="site-container grid gap-8 md:grid-cols-2 md:gap-16">
		<div class="aspect-square overflow-clip rounded-xl md:rounded-2xl">
			<Image
				src={building}
				alt="Space Coast Medicine Building"
				width={1001}
				densities={[1.5, 2]}
				class="h-full w-full object-cover"
			/>
		</div>

		<div class="">
			<h2 class="h1">The Finest Care And Amenities</h2>
			<p class="text-muted-foreground mt-3 max-w-lg text-pretty md:text-lg">
				At Space Coast Medicine, our doctors believe in treating the whole person, not just the
				symptoms. We prioritize holistic primary.
			</p>

			<ul class="mt-8 space-y-3">
				{
					amenities.map((item) => (
						<li class="flex items-start">
							<span class="bg-accent mt-1.5 mr-3 inline-block size-3 shrink-0 rounded-full md:mt-2" />
							<span class="text-muted-foreground md:text-lg">{item}</span>
						</li>
					))
				}
			</ul>
		</div>
	</div>
</section>
