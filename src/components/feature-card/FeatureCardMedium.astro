---
/**
 * * These are medium sized cards with icons, titles, and text
 *
 * ! I copy all icons into the src/icons folder and recommend you do the same
 * ! If the icon is at src/icons/tabler/paint.svg then you put in "tabler/paint"
 */

import { Icon } from "astro-icon/components";

import Button from "@/components/button/Button.astro";
import { getLocaleFromUrl } from "@/js/localeUtils";

interface Props {
	icon: string;
	title: string;
	text: string;
	rest?: any; // catch-all for any additional parameters, such as "aria-label"
}

const { icon, title, text, ...rest } = Astro.props as Props;

const currLocale = getLocaleFromUrl(Astro.url);
---

<div {...rest}>
	<div
		class="bg-muted hover:border-accent flex h-full max-w-md flex-col rounded-lg border p-6 text-center transition-colors md:rounded-xl md:p-8"
	>
		<div class="flex justify-center">
			<div class="bg-primary text-primary-foreground/90 rounded-lg p-2 md:p-4">
				<Icon name={icon} class="size-8" aria-hidden="true" />
			</div>
		</div>

		<h3 class="text-base-900 dark:text-base-100 mt-4 text-lg font-medium tracking-tight">
			{title}
		</h3>

		<p class="description mt-2">{text}</p>
	</div>
</div>
