---
import { type CollectionEntry, getCollection } from "astro:content";

import PostCard from "@/components/post-card/PostCardMultiLink.astro";

interface Props {
	posts: CollectionEntry<"blog">[];
	class?: string;
}

const { posts, class: className } = Astro.props as Props;
---

<div class={`mx-auto grid max-w-7xl gap-x-8 gap-y-16 md:grid-cols-2 lg:grid-cols-3 ${className}`}>
	{posts.map((post, idx) => <PostCard post={post} />)}
</div>