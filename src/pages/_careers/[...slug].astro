---
import { type CollectionEntry, getCollection, render } from "astro:content";

import { defaultLocale } from "@/config/siteSettings.json";
import { filterCollectionByLanguage } from "@/js/localeUtils";
import CareerLayout from "@/layouts/CareerLayout.astro";

export async function getStaticPaths() {
	const careers = await getCollection("careers", ({ data }) => {
		// filter out draft careers
		return data.draft !== true;
	});

	// get rid of pages from other languages and remove locale from slug
	const filteredPages = filterCollectionByLanguage(careers, defaultLocale);

	return filteredPages.map((career) => ({
		params: { slug: career.id },
		props: career,
	}));
}

type Props = CollectionEntry<"careers">;

const career = Astro.props as Props;
const { Content } = await render(career);
---

<CareerLayout career={career}>
	<Content />
</CareerLayout>
